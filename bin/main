#!/usr/bin/env ruby
# rubocop: disable Style/StringLiterals

class Board
  def initialize(board)
    @board = Array.new(9)
    p1 = Array[0]
    p2 = Array[1]
    p3 = Array[2]
    p4 = Array[3]
    p5 = Array[4]
    p6 = Array[5]
    p7 = Array[6]
    p8 = Array[7]
    p9 = Array[8]
  end
  
  def win?
    @win = true if pos1 == pos2 && pos2 == pos3
    @win = true if pos1 == pos5 && pos5 == pos9
    @win = true if pos1 == pos4 && pos4 == pos7
    @win = true if pos2 == pos5 && pos5 == pos8
    @win = true if pos3 == pos5 && pos5 == pos7
    @win = true if pos3 == pos6 && pos6 == pos9
    @win = true if pos4 == pos5 && pos5 == pos6
    @win = true if pos7 == pos8 && pos8 == pos9
    
  end
end

class Player
  def initialize(name, token)
    @name = name
    @token = token
  end

  def get_actions
    puts "Please choose number from 0 to 8"
    choice = gets.chomp.to_i
    if Array[choice] == " "
      Array[choice].each_with_index do |token, choice|
        Array[choice].push(drawing_token)
      end
    else
      puts "This position is taken please choose another one"
    end
  end
end

class GamePlay
  def drawing_token(p1,p2,p3,p4,p5,p6,p7,p8,p9)
    
    puts " #{p1} | #{p2} | #{p3} "
    puts "-------------------- "
    puts " #{p4} | #{p5} | #{p6} "
    puts "-------------------- "
    puts " #{p7} | #{p8} | #{p9} "
    puts " "
  end

  def valid_move?(board, choice)
    if choice.between?(0,8)
       return true
    end
 end

  def turn(board)
    if valid_move?(board, index)
      move(board, index, current_player(board))
      turn(board)
    end
    display_board(board)
  end


  
end

# Welcome the player to the game
puts " Hello and welcome to Tic Tac Toe Game."

#
