#!/usr/bin/env ruby
# rubocop: disable Style/StringLiterals

class Board
  def initialize(board)
    @board = Array.new(9, " ")
  end
  
  def win?
    @win = false
    @win = true if board[0] == board[1] && board[1] == board[2]
    @win = true if board[0] == board[4] && board[4] == board[8]
    @win = true if board[0] == board[3] && board[3] == board[6]
    @win = true if board[1] == board[4] && board[4] == board[7]
    @win = true if board[2] == board[4] && board[4] == board[6]
    @win = true if board[2] == board[5] && board[5] == board[8]
    @win = true if board[3] == board[4] && board[4] == board[5]
    @win = true if board[6] == board[7] && board[7] == board[8]
    return win
  end

  def display_board
    puts " #{@board[0]} | #{@board[1]} | #{@board[2]} "
    puts " ----------- "
    puts " #{@board[3]} | #{@board[4]} | #{@board[5]} "
    puts " ----------- "
    puts " #{@board[6]} | #{@board[7]} | #{@board[8]} "
  end
end

class Player
  def initialize(name, token)
    @name = name
    @token = token
  end

  def input
    puts "Please choose number from 0 to 8"
    @choice = gets.chomp.to_i
  end

  def position_taken?
    if @board[input] == 'X' || @board[input] == 'O'
      return true
    else
      return false
    end
  end

  def get_actions(board)
    loop do
      if input.between?(0,8)
        return @choice
      else
        puts "Enter a correct number"
      end
    end
  end

  def turn(board, player, player_choice)
    board[player_choice] = player.token
    current_play = Board.new(board)
    current_play.display_board
    current_play.win?
  end


  
end

# Welcome the player to the game
puts " Hello and welcome to Tic Tac Toe Game."

game_ends = false
while !game_ends
  puts "First player enter your nickname: "
  # save player one name
  name_one = gets.chomp
  player_one = Player.new(name_one, 'X')
  puts "First player name: #{name_one}, your token is 'X' "
  # Ask the second player nickname
  puts "Second player enter your nickname: "
  # save player two nickname
  name_two = gets.chomp
  player_two = Player.new(name_two, 'O')
  # print out player two name
  puts "Second player name: #{name_two}, your token is 'O' "
  puts "Let's start"
  
  loop do
    board = Board.new(board)
    board.display_board
    for i in 1..9
      if i % 2 != 0
        player_choice = player_one.get_actions(board)
        current = player_one.turn(board, player_one, player_choice)
        if current == true
          game_ends = true
          puts "#{player_one.name} WIN"
          break
        end
      else
        player_choice = player_two.get_actions(board)
        current = player_two.turn(board, player_one, player_choice)
        if current == true
          game_ends = true
          puts "#{player_two.name} WIN"
          break
        end
      end
    end
  end

  # asking move for each player
  # displaying the board
  # checking if there was a winner/draw
end

# rubocop: enable Style/StringLiterals
